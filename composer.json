{
  "name": "hope/locker",
  "description": "Process locker",
  "keywords": ["locker"],
  "license": "MIT",
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7.5",
    "mikey179/vfsStream": "^1.6.4",
    "squizlabs/php_codesniffer": "^2.7.1"
  },
  "autoload": {
    "psr-4": {
      "Hope\\Locker\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --coverage-text --coverage-clover=coverage.clover",
    "lint": "./vendor/bin/phpcs --standard=PSR2 src/"
  }
}
